# è‡ªåŠ¨å‡çº§æ£€æŸ¥ï¼ˆé™é»˜ï¼‰
auto_check_updates() {
    # æ£€æŸ¥æ˜¯å¦éœ€è¦è‡ªåŠ¨æ£€æŸ¥æ›´æ–°
    local last_check_file="$CLAUDE_DIR/.last_update_check"
    local current_time=$(date +%s)
    local check_interval=86400  # 24å°æ—¶
    
    # åˆ›å»ºç›®å½•
    mkdir -p "$CLAUDE_DIR"
    
    # æ£€æŸ¥ä¸Šæ¬¡æ£€æŸ¥æ—¶é—´
    if [ -f "$last_check_file" ]; then
        local last_check=$(cat "$last_check_file" 2>/dev/null || echo "0")
        local time_diff=$((current_time - last_check))
        
        if [ $time_diff -lt $check_interval ]; then
            # è¿˜æ²¡åˆ°æ£€æŸ¥æ—¶é—´
            return 0
        fi
    fi
    
    # è®°å½•æœ¬æ¬¡æ£€æŸ¥æ—¶é—´
    echo "$current_time" > "$last_check_file"
    
    # é™é»˜æ£€æŸ¥æ›´æ–°
    local current_version=$(get_claude_version 2>/dev/null)
    local latest_version=$(get_latest_claude_version 2>/dev/null)
    
    if [ "$current_version" != "not_installed" ] && [ "$current_version" != "unknown" ] && [ "$latest_version" != "unknown" ]; then
        local comparison=$(version_compare "$latest_version" "$current_version")
        if [ "$comparison" = "1" ]; then
            # å‘ç°æ›´æ–°ï¼Œåˆ›å»ºæç¤ºæ–‡ä»¶
            cat > "$CLAUDE_DIR/.update_available" << EOF
{
  "current": "$current_version",
  "latest": "$latest_version",
  "check_time": "$current_time"
}
EOF
            print_info "ğŸ’¡ å‘ç° Claude Code æ–°ç‰ˆæœ¬: $current_version â†’ $latest_version"
            print_info "   è¿è¡Œ 'bash install.sh --upgrade' è¿›è¡Œå‡çº§"
        fi
    fi
}

