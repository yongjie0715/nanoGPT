# è·å– Claude Code å½“å‰ç‰ˆæœ¬
get_claude_version() {
    if command -v claude &> /dev/null; then
        # å°è¯•å¤šç§æ–¹å¼è·å–ç‰ˆæœ¬
        local version=""
        
        # æ–¹æ³•1: ç›´æ¥è·å–ç‰ˆæœ¬
        version=$(claude --version 2>/dev/null | head -1 | grep -oE '[0-9]+\.[0-9]+\.[0-9]+' | head -1)
        
        # æ–¹æ³•2: é€šè¿‡ npm è·å–
        if [ -z "$version" ]; then
            version=$(npm list -g @anthropic-ai/claude-code 2>/dev/null | grep -oE '[0-9]+\.[0-9]+\.[0-9]+' | head -1)
        fi
        
        # æ–¹æ³•3: é€šè¿‡åŒ…ä¿¡æ¯è·å–
        if [ -z "$version" ]; then
